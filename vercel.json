{
	"version": 2,
	"builds": [
		{
			"src": "packages/shared-components/package.json",
			"use": "@vercel/node",
			"config": {
				"buildCommand": "pnpm -w run build:components"
			}
		},
		{
			"src": "packages/shared-styles/package.json",
			"use": "@vercel/node",
			"config": {
				"buildCommand": "pnpm -w run build:styles"
			}
		},
		{
			"src": "apps/blog/package.json",
			"use": "@vercel/next"
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "apps/blog"
		}
	]
}
